        do_fan1;
        if [ "$(omv_config_get "${XPATH}/jnfans")" = "1" ]; then
            SYSoutfile=$FANoutfile
            do_sys1;
        fi

        cat <<EOF >> $FANoutfile
COMMENT:"\\\${LASTUPDATE}" >/dev/null
${endeof}
