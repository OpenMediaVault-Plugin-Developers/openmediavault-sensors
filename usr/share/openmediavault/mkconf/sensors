#!/bin/sh

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

y=0
#Temps
CPUoutfile="/usr/share/openmediavault/mkrrdgraph/plugins.d/sensors.py"
MBoutfile="/usr/share/openmediavault/mkconf/collectd.d/mb"
#Fans
FANoutfile="/usr/share/openmediavault/mkconf/collectd.d/fan"
SYSoutfile="/usr/share/openmediavault/mkconf/collectd.d/sys"

end='\'
starteof2='cat <<EOF >> ${OMV_COLLECTD_RRDTOOL_MKGRAPH}'
starteof1='cat <<EOF > "${OMV_COLLECTD_CONFIG_DIR}/sensors.conf"'
endeof='EOF'
graph='OMV_COLLECTD_RRDTOOL_MKGRAPH=${OMV_COLLECTD_RRDTOOL_MKGRAPH:-"
"}'
collected='OMV_COLLECTD_CONFIG_DIR=${OMV_COLLECTD_CONFIG_DIR:-"/etc/collectd/collectd.conf.d"}'

XPATH="/config/services/sensors"

# Custom settings
TABmain="$(omv_config_get "${XPATH}/tabmain")"
TABcpuTEMP="$(omv_config_get "${XPATH}/tabcputemp")"
TABmbTEMP="$(omv_config_get "${XPATH}/tabmbtemp")"
TABcpuFAN="$(omv_config_get "${XPATH}/tabcpufan")"
TABsysFAN="$(omv_config_get "${XPATH}/tabsysfan")"
GRAPHcpuTITLE="$(omv_config_get "${XPATH}/graphcputitle")"
GRAPHmbTITLE="$(omv_config_get "${XPATH}/graphmbtitle")"
GRAPHcfanTITLE="$(omv_config_get "${XPATH}/graphcfantitle")"
GRAPHsfanTITLE="$(omv_config_get "${XPATH}/graphsfantitle")"
LINEcpuTEMP="$(omv_config_get "${XPATH}/linecputemp")"
LINEcpuFAN="$(omv_config_get "${XPATH}/linecpufan")"
LINEmbTEMP="$(omv_config_get "${XPATH}/linembtemp")"
LINEsysFAN="$(omv_config_get "${XPATH}/linesysfan")"

do_cpu1() {
if [ ! -z $main_cpu ]; then
    if [ "$main_cpu" = "sensors-emc6d103-i2c-1-2e" ]; then
        cat <<EOF >> $CPUoutfile
        args.append('DEF:cpu1pavg={data_dir}/sensors-emc6d103-i2c-1-2e/temperature-temp3.rrd:value:AVERAGE'.format(**config))
        args.append('DEF:cpu1pmin={data_dir}/sensors-emc6d103-i2c-1-2e/temperature-temp3.rrd:value:MIN'.format(**config))
        args.append('DEF:cpu1pmax={data_dir}/sensors-emc6d103-i2c-1-2e/temperature-temp3.rrd:value:MAX'.format(**config))
        args.append('DEF:cpu2pavg={data_dir}/sensors-emc6d103-i2c-1-2d/temperature-temp3.rrd:value:AVERAGE'.format(**config))
        args.append('DEF:cpu2pmin={data_dir}/sensors-emc6d103-i2c-1-2d/temperature-temp3.rrd:value:MIN'.format(**config))
        args.append('DEF:cpu2pmax={data_dir}/sensors-emc6d103-i2c-1-2d/temperature-temp3.rrd:value:MAX'.format(**config))
EOF

    else
        case "$main_cpu" in
            "sensors-nct6792*"*) rrd=2 ;;
            "sensors-nct6776"*) rrd=2 ;;
            "sensors-nct6779"*) rrd=2 ;;
            "sensors-w83627thf"*) rrd=2 ;;
            "sensors-it8728"*) rrd=3 ;;
            "sensors-f71808a"*) rrd=2 ;;
            *) rrd=1 ;;
        esac

        if [ -e /var/lib/rrdcached/db/localhost/sensors-w83795adg-i2c-0-2f/temperature-temp7.rrd ]; then
            rrd=7
        fi

        cat <<EOF >> $CPUoutfile
        args.append('DEF:cpupavg={data_dir}/${main_cpu}/temperature-temp${rrd}.rrd:value:AVERAGE'.format(**config))
        args.append('DEF:cpupmin={data_dir}/${main_cpu}/temperature-temp${rrd}.rrd:value:MIN'.format(**config))
        args.append('DEF:cpupmax={data_dir}/${main_cpu}/temperature-temp${rrd}.rrd:value:MAX'.format(**config))
EOF

    fi
fi
}

do_cpu2() {
x=0
for items in $cores_no;
do
    if [ "$y" = "1" ] && [ $x != "0" ] || [ "$y" = "0" ]; then
        cat <<EOF >> $CPUoutfile
        args.append('DEF:cpuc$((x - y))avg={data_dir}/${cores}/${items}:value:AVERAGE'.format(**config))
        args.append('DEF:cpuc$((x - y))min={data_dir}/${cores}/${items}:value:MIN'.format(**config))
        args.append('DEF:cpuc$((x - y))max={data_dir}/${cores}/${items}:value:MAX'.format(**config))
EOF

    fi
    x=$((x + 1))
done

if [ -e /var/lib/rrdcached/db/localhost/sensors-coretemp-isa-0001 ]; then
    for items in $cores_no1;
    do
        if [ "$y" = "1" ] && [ $x != "0" ] || [ "$y" = "0" ]; then
            cat <<EOF >> $CPUoutfile
        args.append('DEF:cpuc$((x - y))avg={data_dir}/${cores1}/${items}:value:AVERAGE'.format(**config))
        args.append('DEF:cpuc$((x - y))min={data_dir}/${cores1}/${items}:value:MIN'.format(**config))
        args.append('DEF:cpuc$((x - y))max={data_dir}/${cores1}/${items}:value:MAX'.format(**config))
EOF

        fi
        x=$((x + 1))
    done
fi
}

do_cpu3() {
if [ ! -z $main_cpu ]; then
    if [ "$main_cpu" = "sensors-emc6d103-i2c-1-2e" ]; then
        cat <<EOF >> $CPUoutfile
        args.append('LINE1:cpu1pavg{COLOR_CPU1_PHYSICAL}:"${LINEcpuTEMP}1"'.format(**config))
        args.append('GPRINT:cpu1pmin:MIN:"%4.2lf Min"')
        args.append('GPRINT:cpu1pavg:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:cpu1pmax:MAX:"%4.2lf Max"')
        args.append('GPRINT:cpu1pavg:LAST:"%4.2lf Last\l"')
        args.append('LINE1:cpu2pavg{COLOR_CPU2_PHYSICAL}:"${LINEcpuTEMP}2"'.format(**config))
        args.append('GPRINT:cpu2pmin:MIN:"%4.2lf Min"')
        args.append('GPRINT:cpu2pavg:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:cpu2pmax:MAX:"%4.2lf Max"')
        args.append('GPRINT:cpu2pavg:LAST:"%4.2lf Last\l"')
EOF

    else
        cat <<EOF >> $CPUoutfile
        args.append('LINE1:cpupavg{COLOR_CPU1_PHYSICAL}:"${LINEcpuTEMP}"'.format(**config))
        args.append('GPRINT:cpupmin:MIN:"%4.2lf Min"')
        args.append('GPRINT:cpupavg:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:cpupmax:MAX:"%4.2lf Max"')
        args.append('GPRINT:cpupavg:LAST:"%4.2lf Last\l"')
EOF

    fi
fi
}

do_cpu3f() {
if [ ! -z $main_cpu ]; then
    if [ "$main_cpu" = "sensors-emc6d103-i2c-1-2e" ]; then
        cat <<EOF >> $CPUoutfile
        CDEF:farc1=9,5,/,cpu1pavg,*,32,+'.format(**config))
        CDEF:farc2=9,5,/,cpu1pmin,*,32,+'.format(**config))
        CDEF:farc3=9,5,/,cpu1pmax,*,32,+'.format(**config))
        args.append('LINE1:farc1{COLOR_CPU1_PHYSICAL}:"${LINEcpuTEMP}1"'.format(**config))
        args.append('GPRINT:farc2:MIN:"%4.2lf Min"')
        args.append('GPRINT:farc1:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:farc3:MAX:"%4.2lf Max"')
        args.append('GPRINT:farc1:LAST:"%4.2lf Last\l"')
        CDEF:farc4=9,5,/,cpu1pavg,*,32,+')
        CDEF:farc5=9,5,/,cpu1pmin,*,32,+')
        CDEF:farc6=9,5,/,cpu1pmax,*,32,+')
        args.append('LINE1:farc1{COLOR_CPU2_PHYSICAL}:"${LINEcpuTEMP}2"'.format(**config))
        args.append('GPRINT:farc5:MIN:"%4.2lf Min"')
        args.append('GPRINT:farc4:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:farc6:MAX:"%4.2lf Max"')
        args.append('GPRINT:farc4:LAST:"%4.2lf Last\l"')
EOF

    else
        cat <<EOF >> $CPUoutfile
        CDEF:farc1=9,5,/,cpupavg,*,32,+'.format(**config))
        CDEF:farc2=9,5,/,cpupmin,*,32,+'.format(**config))
        CDEF:farc3=9,5,/,cpupmax,*,32,+'.format(**config))
        args.append('LINE1:farc1{COLOR_CPU1_PHYSICAL}:"${LINEcpuTEMP}"'.format(**config))
        args.append('GPRINT:farc2:MIN:"%4.2lf Min"')
        args.append('GPRINT:farc1:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:farc3:MAX:"%4.2lf Max"')
        args.append('GPRINT:farc1:LAST:"%4.2lf Last\l"')
EOF

    fi
fi
}

do_cpu4() {
x=0
for items in $cores_no;
do
    if [ "$y" = "1" ] && [ $x != "0" ] || [ "$y" = "0" ]; then
        cat <<EOF >> $CPUoutfile
        args.append('LINE1:cpuc$((x - y))avg{COLOR_CPU_CORE_$((x - y))}:"Core $((x - y + 1))"'.format(**config))
        args.append('GPRINT:cpuc$((x - y))min:MIN:"%4.2lf Min"')
        args.append('GPRINT:cpuc$((x - y))avg:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:cpuc$((x - y))max:MAX:"%4.2lf Max"')
        args.append('GPRINT:cpuc$((x - y))avg:LAST:"%4.2lf Last\l"')
EOF

    fi
    x=$((x + 1))
done

if [ -e /var/lib/rrdcached/db/localhost/sensors-coretemp-isa-0001 ]; then
    for items in $cores_no1;
    do
        if [ "$y" = "1" ] && [ $x != "0" ] || [ "$y" = "0" ]; then
            cat <<EOF >> $CPUoutfile
        args.append('LINE1:cpuc$((x - y))avg{COLOR_CPU_CORE_$((x - y))}:"Core $((x - y + 1))"'.format(**config))
        args.append('GPRINT:cpuc$((x - y))min:MIN:"%4.2lf Min"')
        args.append('GPRINT:cpuc$((x - y))avg:AVERAGE:"%4.2lf Avg"')
        args.append('GPRINT:cpuc$((x - y))max:MAX:"%4.2lf Max"')
        args.append('GPRINT:cpuc$((x - y))avg:LAST:"%4.2lf Last\l"')
EOF

        fi
        x=$((x + 1))
    done
fi
}

do_cpu4f() {
x=0
for items in $cores_no;
