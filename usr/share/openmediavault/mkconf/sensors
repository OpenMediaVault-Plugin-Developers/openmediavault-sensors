    if [ "$y" = "1" ] && [ $x != "0" ] || [ "$y" = "0" ]; then
        cat <<EOF >> $CPUoutfile
        CDEF:far$((x - y))avg=9,5,/,cpuc$((x - y))avg,*,32,+'.format(**config))
