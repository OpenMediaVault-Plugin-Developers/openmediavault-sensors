    if [ ! -f /usr/share/openmediavault/mkconf/collectd.d/sensors ]; then
        cat <<EOF > /usr/share/openmediavault/mkconf/collectd.d/sensors
#!/bin/sh
#
# This file is part of OpenMediaVault.
